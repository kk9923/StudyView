<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DragLayout">
        <attr name="fix_height" format="dimension"/>
        <attr name="max_height" format="dimension"/>
        <attr name="collapse_parallax" format="float"/>
        <attr name="mode" format="enum">
            <enum name="drag" value="1"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="SuperButton">
        <attr name="shape" format="enum">
            <enum name="rectangle" value="0"/>
            <enum name="oval" value="1"/>
            <enum name="line" value="2"/>
            <enum name="ring" value="3"/>
        </attr>
        <attr name="solidColor" format="color"/>

        <attr name="cornersRadius" format="dimension"/>
        <attr name="topLeftRadius" format="dimension"/>
        <attr name="topRightRadius" format="dimension"/>
        <attr name="bottomLeftRadius" format="dimension"/>
        <attr name="bottomRightRadius" format="dimension"/>

        <attr name="strokeWidth" format="dimension" />
        <attr name="strokeDashWidth" format="dimension" />
        <attr name="strokeDashGap" format="dimension" />
        <attr name="strokeColor" format="color" />

        <attr name="sizeWidth" format="color" />
        <attr name="sizeHeight" format="color" />

        <attr name="selectorPressedColor" format="color" />
        <attr name="selectorDisableColor" format="color" />
        <attr name="selectorNormalColor" format="color" />
        <attr name="useSelector" format="boolean" />

        <attr name="gradientOrientation" format="enum" >
            <enum name="TOP_BOTTOM" value="0" />
            <enum name="TR_BL" value="1" />
            <enum name="RIGHT_LEFT" value="2" />
            <enum name="BR_TL" value="3" />
            <enum name="BOTTOM_TOP" value="4" />
            <enum name="BL_TR" value="5" />
            <enum name="LEFT_RIGHT" value="6" />
            <enum name="TL_BR" value="7" />
        </attr>
        <attr name="gradientAngle" format="dimension" />
        <attr name="gradientCenterX" format="dimension" />
        <attr name="gradientCenterY" format="dimension" />
        <attr name="gradientGradientRadius" format="dimension" />
        <attr name="gradientStartColor" format="color" />
        <attr name="gradientCenterColor" format="color" />
        <attr name="gradientEndColor" format="color" />
        <attr name="gradientUseLevel" format="boolean" />


        <attr name="gradientType" format="enum">
            <enum name="linear" value="0" />
            <enum name="radial" value="1" />
            <enum name="sweep" value="2" />
        </attr>

    </declare-styleable>

    <declare-styleable name="DrawText">
        <attr name="orientation" format="enum">
            <enum name="vertical" value="1"/>
            <enum name="horizontal" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="ExpandableTextView" >
        <attr name="maxExpandLines" format="integer" />
    </declare-styleable>
    <declare-styleable name="SwitchButton">
        <attr name="sb_shadow_radius" format="reference|dimension"/>
        <attr name="sb_shadow_offset" format="reference|dimension"/>
        <attr name="sb_shadow_color" format="reference|color"/>
        <attr name="sb_uncheck_color" format="reference|color"/>
        <attr name="sb_checked_color" format="reference|color"/>

        <attr name="sb_border_width" format="reference|dimension"/>
        <attr name="sb_checkline_color" format="reference|color"/>
        <attr name="sb_checkline_width" format="reference|dimension"/>
        <attr name="sb_uncheckcircle_color" format="reference|color"/>
        <attr name="sb_uncheckcircle_width" format="reference|dimension"/>
        <attr name="sb_uncheckcircle_radius" format="reference|dimension"/>

        <attr name="sb_checked" format="reference|boolean"/>
        <attr name="sb_shadow_effect" format="reference|boolean"/>
        <attr name="sb_effect_duration" format="reference|integer"/>
        <attr name="sb_button_color" format="reference|color"/>
        <attr name="sb_show_indicator" format="reference|boolean"/>
        <attr name="sb_background" format="reference|color"/>
        <attr name="sb_enable_effect" format="reference|boolean"/>
    </declare-styleable>

</resources>
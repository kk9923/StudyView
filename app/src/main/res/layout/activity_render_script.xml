<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RenderScriptActivity">
    <com.kx.studyview.views.SuperButton
        android:id="@+id/superButton"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="模糊图片"
        android:layout_margin="20dp"
        app:cornersRadius="20dp"
        app:useSelector="true"
        app:selectorNormalColor="@color/colorPrimary"
        app:selectorPressedColor="#993F51B5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:src="@mipmap/render_script_blur_before"
        android:id="@+id/iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>